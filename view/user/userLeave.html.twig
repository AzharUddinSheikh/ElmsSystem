{% extends 'partials/header.html' %}

{% block body %}Home Panel{% endblock %}
{% block head %}
  {{ include('partials/navigation.html.twig') }}
{% endblock %}

{% block content %}

    <div class="container">
    <h2 class="text-center">USER PROFILE</h2>
      <table class="table-dark table" id="table1">
      <thead>
          <tr>
            <th scope="col">NAME</th>
            <th scope="col">{{details[3]}} {{details[4]}}</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">EMAIL</th>
            <td>{{details[1]}}</td>
          </tr>
          <tr>
            <th scope="row">NUMBER</th>
            <td>{{details[2]}}</td>
          </tr>
          <tr>
            <th scope="row">DEPARTMENT</th>
            <td>{{details[0]}}</td>
          </tr>
        </tbody>
      </table>
    </div>


  <div class="container">
    {% if session.message %} 
      <div class="valid alert alert-warning" role="alert">{{session.message}}</div>
    {% endif %}
    <h2 class="text-center my-5">LEAVE HISTORY OF THE USER</h2>
    <div class="container mt-5 mb-5">
     {% set id = details[5] %}
     {% if session.id == id %}
     <button class="btn btn-primary my-2" style="float:right;" data-bs-toggle="modal" data-bs-target="#applyLeave">Apply Leave</button>
     {% endif %}
        <table class="table table-dark table-striped my-3">
            <thead>
              <tr>
                <th scope="col" rowspan="2">FROM</th>
                <th scope="col" rowspan="2">TO</th>
                <th scope="col" rowspan="2">DAYS</th>
                <th scope="col" rowspan="2">REASON</th>
                <th scope="col" colspan="4" class="text-center">STATUS</th>
                <tr>
                    <th></th>
                    <th>from</th>
                    <th>to</th>
                    <th>days</th>
                </tr>
            </thead>
            <tbody>
            {% if size > 0 %}
              {% for leave in range(0, size-1) %}
                <tr >
                    <td>{{userleave[leave].start | date("d-m-Y") }}</td>
                    <td>{{userleave[leave].end | date("d-m-Y") }}</td>
                    {% set days = getNoOfDays(userleave[leave].start, userleave[leave].end) %}
                    <td>{{days}}</td>
                    <td>{{userleave[leave].excuse}}</td>
                    {% set day = getNoOfDays(userleave[leave].from, userleave[leave].to) %}
                    {% set status = userleave[leave].status %}
                    {% if status == 2 %}
                    <td><a data-toggle="tooltip" data-placement="top" title="REASON  {{userleave[leave].reason}}">REJECTED</a></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    {% elseif status == 1 %}
                    <td style="color: green;">GRANTED</td>
                    <td style="color: green;">{{userleave[leave].from}}</td>
                    <td style="color: green;">{{userleave[leave].to}}</td>
                    {% set day = getNoOfDays(userleave[leave].from, userleave[leave].to) %}
                    <td style="color: green;">{{day}}</td>
                    {% else %}
                        <td>PENDING</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        {% endif %}
                </tr>
              {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>
  </div>
<!-- Modal -->
<div class="modal fade" id="applyLeave" tabindex="-1" role="dialog" aria-labelledby="applyLeaveModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="applyLeaveModal">APPLY LEAVE FORM</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="" method="POST" name="applyLeave">
            <div class="mb-5">
              <label for="dob" class="form-label">FROM</label>
              <input type="text" class="date form-control" name="dob" id="dob" onkeypress="return false">
            </div>
            <div class="mb-5">
              <label for="dob1" class="form-label">TO</label>
              <input type="text" class="date form-control" name="dob1" id="dob1" onkeypress="return false">
            </div>
            <div class="form-group mb-5">
                <label for="textarea">Reason</label>
                <textarea class="form-control" id="textarea" name="textarea"></textarea>
            </div>
            <div class="col-md-12 text-center">
              <span class="submit">
                <button type="submit" class="btn btn-primary">Apply</button>
              </span>
              <button type="reset" class="btn btn-primary">Clear</button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- $('.dropdown-toggle').dropdown() -->
<script src="../public/javascript/welcome.js"></script>
{% endblock %}