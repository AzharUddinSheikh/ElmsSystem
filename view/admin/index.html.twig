    <div class="container">
        {% if session.message %}
            <div class="alert alert-primary" role="alert">
                {{session.message}}
            </div>
        {% endif %}
    </div>

    <h2 class="text-center mt-3">PENDING LEAVES</h2>
    <div class="container mt-3 mb-5">
        <table class="table table-dark table-striped my-3" id="myTable">
            <thead>
                <tr>
                    <th scope="col">NAME</th>
                    <th scope="col">TO-FROM (DAYS)</th>
                    <th scope="col">REASON</th>
                    <th scope="col">APPLIED ON</th>
                    <th scope="col">ACTION</th>
                </tr>
            </thead>
            <tbody>
            {% if count > 0 %}
                {% for leave in range(0, count-1) %}
                    <tr>
                        <td><a href="userLeave.php?id={{leaves[leave].user_id|base64_encode}}">{{leaves[leave].first_name}} {{leaves[leave].last_name}}</a></td>
                        {% set days = getNoOfDays(leaves[leave].start_date, leaves[leave].end_date) %}
                        <td>{{leaves[leave].end_date | date("d/m/Y") }}-{{leaves[leave].start_date | date("d/m/Y") }} ({{days}})</td>
                        <td>{{leaves[leave].reason}}</td>
                        <td>{{leaves[leave].added_on | date("d/m/Y")}}</td>
                        <td>
                            <button id='{{ leaves[leave].id | base64_encode }}' name='{{ leaves[leave].emp_id | base64_encode }}' class="approve btn btn-success">Approve</button>  <button id='{{ leaves[leave].id | base64_encode }}' class="reject btn btn-danger mx-1" data-toggle="modal" data-target="#rejectUserLeave">Reject</button> <button class="userdetails btn btn-info" id='{{ leaves[leave].id | base64_encode }}'  data-toggle="modal" data-target="#editUserLeave">Modify</button>
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>
    <!-- Modal -->
        <div class="modal fade" id="editUserLeave" tabindex="-1" role="dialog" aria-labelledby="editUserLeaveLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editUserLeaveLabel">EDIT USER LEAVE</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="http://localhost/elms/twig/admin.php" autocomplete="off" method="POST" name="editleave">
                            <input type="hidden" name="userleaveid" id='userleaveid'>
                            <div class="mb-5">
                                <label for="dob" class="form-label">FROM</label>
                                <input type="text" class="date form-control" name="dob" id="dob" onkeypress="return false">
                            </div>
                            <div class="mb-5">
                                <label for="dob1" class="form-label">TO</label>
                                <input type="text" class="date form-control" name="dob1" id="dob1" onkeypress="return false">
                            </div>
                            <div class="col-md-12 text-center">
                                <span class="submit">
                                <button type="submit" name="submit" class="btn btn-primary">Approved On Update</button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="rejectUserLeave" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">User Leave Rejecting</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="http://localhost/elms/twig/admin.php" autocomplete="off" method="POST" id="myForm">
                            <input type="hidden" name="rejectid" id='rejectid'>
                            <div class="input-group">
                                <textarea class="form-control" aria-label="With textarea" id="reason" name="reason" placeholder="Reason For Rejecting Leave"></textarea>
                              </div>
                            <div class="col-md-12 text-center  mt-5"><button type="submit" name="submit1" class="btn btn-danger">Reject On Submit</button></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
<script src="../public/javascript/pendingLeave.js"></script>
{% endblock %}