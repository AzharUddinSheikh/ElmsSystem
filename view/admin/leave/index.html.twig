{% extends 'partials/header.html' %}

{% block body %}User Leave Details Panel{% endblock %}

{% block head %}
    {{ include('partials/navigation.html.twig') }}
{% endblock %}

{% block content %}
<div class="container mt-3 text-center">
    {% if session.message %}
        <div class="alert alert-primary" role="alert">
            {{session.message}}        
        </div>
    {% endif %}
</div>
<div class="container mt-5">
    <h1 class="text-center mb-5">LEAVE MANAGEMENT CHECK PENDING, APPROVED, REJECTED LEAVES</h1>
</div>
    <div class="container mt-5 mb-5">
        <table class="table table-dark table-striped my-3">
            <thead>
                <tr>
                    <th scope="col">NAME</th>
                    <th scope="col">FROM</th>
                    <th scope="col">TO</th>
                    <th scope="col">DAYS</th>
                    <th scope="col">REASON</th>
                    <th scope="col">APPLIED ON</th>
                    <th scope="col">ACTION</th>
                </tr>
            </thead>
            <tbody>
            {% if count > 0 %}
                {% for leave in range(0, count-1) %}
                    <tr>
                        <td><a href="userLeave.php?id={{leaves[leave].id|base64_encode}}">{{leaves[leave].first_name}} {{leaves[leave].last_name}}</a></td>
                        <td>{{leaves[leave].start_date}}</td>
                        <td>{{leaves[leave].end_date}}</td>
                        {% set days = getNoOfDays(leaves[leave].start_date, leaves[leave].end_date) %}
                        <td>{{days}}</td>
                        <td>{{leaves[leave].reason}}</td>
                        <td>{{leaves[leave].added_on | date("d-m-Y")}}</td>
                        <td>
                            <button id='{{ leaves[leave].id | base64_encode }}' name='{{ leaves[leave].emp_id | base64_encode }}' class="approve btn btn-success">Approve</button>  <button id='{{ leaves[leave].id | base64_encode }}' class="reject btn btn-danger mx-1" data-toggle="modal" data-target="#rejectUserLeave">Reject</button>
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
    </div>

{% endblock %}