{% extends 'partials/header.html' %}

{% block body %}Employee Assign{% endblock %}

{% block head %}
    {{ include('partials/navigation.html.twig') }}
{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="text-center">EMPLOYEES ASSIGN IN A {{rows[0].name}} DEPARTMENT</h1>
        <table class="table table-dark table-striped my-3">
            <thead>
                <tr>
                    <th scope="col">EMP_ID</th>
                    <th scope="col">NAME</th>
                    <th scope="col">EMAIL</th>
                </tr>
            </thead>
                <tbody>
                {% for user in range(0, count-1) %}
                    <tr>
                        <td>{{rows[user].emp_id}}</td>
                        <td><a href="userLeave.php?id={{rows[user].user_id | base64_encode }}" style="text-decoration: none;">{{rows[user].first_name}} {{rows[user].last_name}}</a></td>
                        <td>{{rows[user].email}}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
